<?xml version="1.0" encoding="UTF-8"?>

<!-- KI-256 FlightDirector Indicator
     Syd Adams
-->

<PropertyList>

  <path>ki256.ac</path>
    
  <animation>
    <object-name>KI256</object-name>
    <object-name>KI256.back</object-name>
    <object-name>KI256.ring</object-name>
    <object-name>KI256.pitch</object-name>
    <object-name>KI256.plane</object-name>
    <object-name>FDbars</object-name>
    <object-name>KI256.markers</object-name>
    <object-name>Lpivot</object-name>
    <object-name>Rpivot</object-name> 
    <object-name>KI256.DH</object-name>

    <object-name>vitre</object-name>
  </animation>
    
  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <object-name>KI256.ring</object-name>
    <object-name>KI256.pitch</object-name>
    <object-name>KI256.plane</object-name>
    <object-name>FDbars</object-name>
    <object-name>KI256.markers</object-name>
    <object-name>Lpivot</object-name>
    <object-name>Rpivot</object-name> 
    <object-name>KI256.DH</object-name>
    <emission>
      <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>
    
  <!-- 	KI-256		-->	  
  <animation>
    <type>rotate</type>
    <object-name>KI256.ring</object-name>
    <object-name>KI256.pitch</object-name>
    <property>orientation/roll-deg</property>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>KI256.pitch</object-name>
    <property>orientation/pitch-deg</property>
    <interpolation>
      <entry><ind> -30 </ind><dep>  0.012 </dep></entry>
      <entry><ind>   0 </ind><dep>  0.000 </dep></entry>
      <entry><ind>  30 </ind><dep> -0.012 </dep></entry>
    </interpolation>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>

  <animation>
    <type>select</type>
    <object-name>KI256.DH</object-name>
    <condition>
      <property>instrumentation/kfc200/dh-alert</property>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>FDbars</object-name>
    <object-name>Lpivot</object-name>
    <object-name>Rpivot</object-name>
    <condition>
      <property>instrumentation/kfc200/fd-on</property>
    </condition>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>FDbars</object-name>
    <property>instrumentation/kfc200/command-bar-pitch</property>
    <factor> 0.0004 </factor>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>Lpivot</object-name>
    <object-name>Rpivot</object-name>
    <property>instrumentation/kfc200/command-bar-pitch</property>
    <factor> 0.0004 </factor>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>FDbars</object-name>
    <property>instrumentation/kfc200/command-bar-roll</property>
    <center>
      <x-m> 0.004 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.000 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Lpivot</object-name>
    <object-name>Rpivot</object-name>
    <property>instrumentation/kfc200/command-bar-roll</property>
    <center>
      <x-m> 0.004 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.000 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Lpivot</object-name>
    <property>instrumentation/kfc200/command-bar-roll</property>
    <center>
      <x-m>  0.000 </x-m>
      <y-m> -0.023 </y-m>
      <z-m> -0.003 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Rpivot</object-name>
    <property>instrumentation/kfc200/command-bar-roll</property>
    <center>
      <x-m>  0.000 </x-m>
      <y-m>  0.023 </y-m>
      <z-m> -0.003 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>

